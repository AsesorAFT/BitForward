# BitForward - Production Environment Variables

# Node Environment
NODE_ENV=production

# App Configuration
VITE_APP_NAME=BitForward
VITE_APP_VERSION=3.0.0
VITE_APP_ENV=production

# API Endpoints (Production)
VITE_API_BASE_URL=https://api.bitforward.io
VITE_API_TIMEOUT=30000

# Blockchain Configuration
VITE_DEFAULT_CHAIN_ID=1
VITE_INFURA_PROJECT_ID=your_infura_project_id_here
VITE_ALCHEMY_API_KEY=your_alchemy_api_key_here

# Price Feed APIs
VITE_COINGECKO_API_URL=https://api.coingecko.com/api/v3
VITE_BINANCE_WS_URL=wss://stream.binance.com:9443
VITE_PRICE_UPDATE_INTERVAL=5000

# Analytics
VITE_GOOGLE_ANALYTICS_ID=
VITE_MIXPANEL_TOKEN=

# Feature Flags
VITE_ENABLE_WEB3=true
VITE_ENABLE_LENDING=true
VITE_ENABLE_TRADING=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true

# Debug
VITE_DEBUG_MODE=false
VITE_SHOW_LOGS=false

# CDN
VITE_CDN_URL=https://cdn.bitforward.io

# Security
VITE_ENABLE_CSP=true
VITE_ENABLE_RATE_LIMIT=true
VITE_MAX_REQUESTS_PER_MINUTE=60
