{
  "name": "bitforward-enterprise",
  "version": "2.0.0",
  "description": "BitForward Financial Technologies - Enterprise DeFi Platform with Phoenix UI",
  "main": "server/server.js",
  "type": "module",
  "scripts": {
    "start": "node server/server.js",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "server:dev": "nodemon server/server.js",
    "frontend": "live-server --port=8080 --entry-file=enterprise.html",
    "prototype": "python -m http.server 8000",
    "test": "jest",
    "minify:css": "node scripts/minify-css.js",
    "minify:js": "node scripts/minify-js.js",
    "optimize:images": "node scripts/optimize-images.js",
    "analyze": "node scripts/analyze-bundle.js",
    "build:optimized": "npm run minify:css && npm run minify:js && npm run optimize:images",
    "build:css": "echo 'CSS build - placeholder for production minification'",
    "build:js": "echo 'JS build - placeholder for production bundling'",
    "lint": "eslint src/ server/ js/",
    "format": "prettier --write src/ server/ js/ css/",
    "migrate": "node server/migrations/migrate.js",
    "db:setup": "node server/database/setup.js",
    "db:reset": "rm -f server/database/bitforward.sqlite3 && npm run db:setup",
    "db:verify": "node verify-bunker.js",
    "docker:build": "docker build -t bitforward-enterprise .",
    "docker:run": "docker run -p 3001:3001 bitforward-enterprise",
    "deploy": "echo 'Production deployment - placeholder'"
  },
  "keywords": [
    "defi",
    "fintech",
    "enterprise",
    "lending",
    "forward-contracts",
    "insurance",
    "collateral",
    "binance-style",
    "compound-protocol",
    "bitcoin",
    "ethereum",
    "solana",
    "usdt",
    "usdc",
    "dai",
    "blockchain",
    "smart-contracts",
    "derivatives",
    "crypto",
    "api",
    "rest"
  ],
  "author": "AsesorAFT <asesoraft@bitforward.financial>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AsesorAFT/BitForward.git"
  },
  "homepage": "https://github.com/AsesorAFT/BitForward#readme",
  "bugs": {
    "url": "https://github.com/AsesorAFT/BitForward/issues"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "clean-css": "^5.3.3",
    "eslint": "^8.0.0",
    "gzip-size": "^7.0.0",
    "imagemin": "^8.0.1",
    "imagemin-svgo": "^10.0.1",
    "jest": "^29.0.0",
    "jsdom": "^27.0.1",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.38",
    "prettier": "^2.0.0",
    "tailwindcss": "^3.4.4",
    "terser": "^5.44.0",
    "vite": "^5.2.0"
  },
  "dependencies": {
    "@solana/web3.js": "^1.0.0",
    "axios": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "bitcoinjs-lib": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "sqlite3": "^5.1.7",
    "web3": "^4.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "config": {
    "supportedChains": [
      "bitcoin",
      "ethereum",
      "solana"
    ],
    "defaultNetwork": "mainnet",
    "apiEndpoints": {
      "bitcoin": "https://blockstream.info/api",
      "ethereum": "https://api.etherscan.io/api",
      "solana": "https://api.mainnet-beta.solana.com"
    }
  }
}
