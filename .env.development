# BitForward - Development Environment Variables

# Node Environment
NODE_ENV=development

# App Configuration
VITE_APP_NAME=BitForward Dev
VITE_APP_VERSION=3.0.0-dev
VITE_APP_ENV=development

# API Endpoints (Local)
VITE_API_BASE_URL=http://localhost:5000
VITE_API_TIMEOUT=10000

# Blockchain Configuration (Testnet)
VITE_DEFAULT_CHAIN_ID=5
VITE_INFURA_PROJECT_ID=your_infura_project_id_here
VITE_ALCHEMY_API_KEY=your_alchemy_api_key_here

# Price Feed APIs
VITE_COINGECKO_API_URL=https://api.coingecko.com/api/v3
VITE_BINANCE_WS_URL=wss://stream.binance.com:9443
VITE_PRICE_UPDATE_INTERVAL=3000

# Analytics (disabled in dev)
VITE_GOOGLE_ANALYTICS_ID=
VITE_MIXPANEL_TOKEN=

# Feature Flags
VITE_ENABLE_WEB3=true
VITE_ENABLE_LENDING=true
VITE_ENABLE_TRADING=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_NOTIFICATIONS=true

# Debug
VITE_DEBUG_MODE=true
VITE_SHOW_LOGS=true

# CDN (usar local en desarrollo)
VITE_CDN_URL=

# Security (relajado en desarrollo)
VITE_ENABLE_CSP=false
VITE_ENABLE_RATE_LIMIT=false
VITE_MAX_REQUESTS_PER_MINUTE=1000
